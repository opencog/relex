<?xml version="1.0" encoding="UTF-8"?>
<project basedir="." default="build" name="relex">
    <property environment="env"/>
    <property name="debuglevel" value="source,lines,vars"/>
    <property name="target" value="1.5"/>
    <property name="source" value="1.5"/>
    <path id="relex.classpath">
        <pathelement location="bin"/>
        <pathelement location="/usr/share/java/gnu-getopt.jar"/>
        <pathelement location="/usr/local/share/java/opennlp-tools-1.3.0.jar"/>
        <pathelement location="/usr/local/share/java/jwnl.jar"/>
        <pathelement location="/usr/local/share/java/maxent-2.4.0.jar"/>
        <pathelement location="/usr/local/share/java/trove.jar"/>
        <pathelement location="/usr/local/share/java/link-grammar-4.3.7.jar"/>
        <pathelement location="/usr/share/java/link-grammar-4.3.7.jar"/>
        <pathelement location="/usr/share/java/commons-logging.jar"/>
        <pathelement location="/usr/share/java/xercesImpl.jar"/>
        <pathelement location="/opt/GATE-4.0/bin/gate.jar"/>
        <pathelement location="/opt/GATE-4.0/lib/jdom.jar"/>
        <pathelement location="/opt/GATE-4.0/lib/jasper-compiler-jdt.jar"/>
        <pathelement location="/opt/GATE-4.0/lib/nekohtml-0.9.5.jar"/>
        <pathelement location="/opt/GATE-4.0/lib/ontotext.jar"/>
    </path>
    <target name="init">
        <mkdir dir="bin"/>
        <copy includeemptydirs="false" todir="bin">
            <fileset dir="src/java"
                     excludes="**/*.launch,
                               **/*.testsuite,
                               **/*.deploy,
                               **/*.location,
                               **/*.execution,
                               **/*.datapool,
                               **/*.artifact,
                               **/*.html,
                               **/*.svg,
                               **/*.swp,
                               **/*.java
                               **/a.out,
                               **/*.c,
                               **/*.pl,
                               **/x"/>
        </copy>
    </target>
    <target name="clean">
        <delete dir="bin"/>
        <delete file="relex-0.10.2.jar"/>
    </target>
    <target depends="clean" name="cleanall"/>
    <target depends="build-subprojects,build-project" name="build"/>
    <target name="build-subprojects"/>
    <target depends="init" name="build-project">
        <echo message="${ant.project.name}: ${ant.file}"/>
        <javac debug="true" debuglevel="${debuglevel}" destdir="bin" source="${source}" target="${target}">
            <src path="src/java"/>
            <classpath refid="relex.classpath"/>
        </javac>
    </target>
    <target name="jar">
        <jar basedir="bin" destfile="relex-0.10.2.jar">
            <manifest>
                <attribute name="Implementation-Title" value="RelEx Semantic Relation Extractor"/>
                <attribute name="Implementation-URL" value="http://opencog.org/wiki/RelEx"/>
                <attribute name="Specification-Version" value="0.10"/>
                <attribute name="Implementation-Version" value="0.10.2"/>
                <attribute name="Main-Class" value="relex.RelationExtractor"/>
            </manifest>
        	<fileset file="data/relex-semantic-algs.txt" />
        	<fileset file="data/frame/concept_vars.txt" />
        	<fileset file="data/frame/mapping_rules.txt" />
        	<fileset file="data/wordnet/file_properties.xml" />
        	<fileset file="data/sentence-detector/EnglishSD.bin.gz" />
        </jar>
    </target>

    <target name="run">
        <java classname="relex.RelationExtractor" failonerror="true" fork="yes">
            <jvmarg line="-Xmx1024m"/>
            <jvmarg line="-Djava.library.path=/usr/lib:/usr/local/lib"/>
            <jvmarg line="-Drelex.linkparserpath=data/linkparser"/>
            <jvmarg line="-Drelex.algpath=data/relex-semantic-algs.txt"/>
            <jvmarg line="-Dwordnet.configfile=data/wordnet/file_properties.xml"/>
            <classpath refid="relex.classpath"/>
            <arg line="-n 4 -l -t -f -s 'Alice wrote a book about dinosaurs for the University of California in Berkeley.'"/>
        </java>
    </target>

</project>
