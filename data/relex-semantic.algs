#TemplateActionAlg
NUMBER-1
<LAB> = \D\.*|\NW\.*
<LAB> != \D..y
<LAB> != \Dmcn
<F_L str> != whose
<F_L DETERMINER_FLAG> != T
<F_L QUERY_INDEFINATE_DETERMINER_FLAG> != T
<F_L POSSESSIVE-FLAG> != T
<F_L QUANTITY-EXCEPTION-FLAG> != T
<F_L QUERY-FLAG> != T
=
<F_R ref links _quantity> = <F_L ref>
<F_L IS-NUMBER-FLAG> = T

